<p id="notice"><%= notice %></p>

<h1>Shoppings</h1>

<table>
  <thead>
    <tr>
      <th>Pizza</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoppings.each do |shopping| %>
      <tr>
	<% if shopping.user_id == current_user.id %>
        <td><%= shopping.pizza_id %></td>
        <td><%= link_to 'Destroy', shopping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
	<% end %>
    <% end %>
  </tbody>
</table>
<br>
